<%= render "devise/shared/error_messages", resource: resource %>
<div class="row d-flex justify-content-center mt-5">
  <div class="col-md-4 align-self-center mt-3">
    <h2 class="text-center mb-3">Восстановление пароля</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>


      <div class="field input-group mb-3">
        <span class="input-group-text">@</span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Email' %>
      </div>

      <div class="actions text-center mb-3">
        <%= f.submit "Отправить инструкцию", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>