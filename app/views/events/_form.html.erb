<%# Паршиал дляотображения формы создания нового события %>
<%= form_with(model: @event) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.hidden_field :address %>
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :pincode %>
    <%= f.text_area :pincode, class: 'form-control' %>
  </div>

  <div class="actions mb-3">
    <%= f.submit I18n.t('buttons.general.save'), class: 'btn btn-primary' %>
    <%= link_to t('buttons.general.back'), :back, class: 'btn btn-secondary' %>
  </div>
<% end %>
