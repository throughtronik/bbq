<div class="event-photo buffer-both">
  <%= link_to image_tag(photo.photo.thumb.url), photo.photo.url, data: { lightbox: "event_gallery" } %>
  Добавил <%= render partial: 'users/user', object: photo.user %>
  <% if policy(photo).destroy? %>
    <%= link_to fa_icon('trash'), event_photo_path(photo.event, photo), method: :delete, data: { confirm: t('alerts.sure') } %>
  <% end %>
</div>
